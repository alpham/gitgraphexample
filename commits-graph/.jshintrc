{
    "boss": true,           // Tolerate assignments where comparisons would be expected
    "curly": true,          // Require {} for every new block or scope
    "eqeqeq": true,         // Require triple equals (===) for comparison
    "eqnull": true,         // Tolerate use of `== null`
    "expr": true,           // Tolerate `ExpressionStatement` as Programs
    "immed": true,          // Require immediate invocations to be wrapped in parens e.g. `( function(){}() );`
    "noarg": true,          // Prohibit use of `arguments.caller` and `arguments.callee`
    "smarttabs": true,      // Tolerate mixed tabs and spaces when the latter are used for alignmnent only
    "trailing": true,       // Prohibit trailing whitespaces
    "undef": false,         // false: Require all non-global variables be declared before they are used
    "unused": false,        // false: warns when you define and never use your variables
    "node": true,           // Enable globals available when code is running inside of the NodeJS runtime environment
    "multistr": true        // Tolerate multi-line strings
}
